{
  "name": "aurisvoice-frontend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:pwa": "node scripts/build-pwa.js",
    "start": "next start",
    "lint": "next lint",
    "android:sync": "npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build:pwa && npx cap copy android",
    "android:apk": "npm run android:build && cd mobile/android && ./gradlew assembleDebug",
    "android:aab": "npm run android:build && cd mobile/android && ./gradlew bundleRelease",
    "android:verify": "node scripts/verify-pwa-files.js",
    "ios:sync": "npx cap sync ios",
    "ios:open": "npx cap open ios",
    "ios:build": "npm run build:pwa && npx cap copy ios",
    "ios:prepare": "npm run ios:build && npm run ios:open"
  },
  "dependencies": {
    "next": "14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "next-themes": "^0.4.6",
    "lucide-react": "^0.453.0",
    "framer-motion": "^11.13.1",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "typescript": "^5.6.3",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.18"
  }
}

